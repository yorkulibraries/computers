<div class="modal fade" id="attach_computers_form">
  <div class="modal-dialog">
    <div class="modal-content">
    <%= form_for @area, url: attach_computers_location_area_path(@location, @area), remote: true  do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Attach Computers To <%= @area.name %></h4>
      </div>
      <div class="modal-body">    
        <div class="row">
          <div class="col-sm-12">
            <%= text_area_tag 'computer_list', @computer_list, rows: "20", style: "width: 100%;" %>
          </div>


        </div>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel Changes</button>
        <%= f.button :submit, class: "btn btn-success" %>
      </div>

    <% end %>
  </div>
</div>
