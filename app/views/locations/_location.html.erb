<% if locals[:table] == true %>
  <tr id="location_<%= location.id %>">
    <td><%= link_to location.name, location %></td>
    <td><%= location.address %></td>
    <td>
      <% parse_subnets(location.ip_subnets).each do |s| %>
        <%= s %></br>
      <% end %>
    </td>
    <td><%= location.floors.size %></td>
    <td><%= location.areas.size %></td>
    <td><%= location.computers.size %></td>
    <td><%= link_to 'Update', edit_location_path(location), data: { remote: true} %></td>
  </tr>
<% else %>
  <div class="col-sm-6 col-md-4"  id="location_<%= location.id %>">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= location.name %></h3>
        <p><%= location.address %></p>
        <p>
          <a href="<%= edit_location_path(location) %>" data-remote="true" class="btn btn-default" role="button">Update</a>
        </p>
      </div>
    </div>
  </div>
<% end %>
