<% if @location.errors.size == 0 %>
  $("#location_form").modal( 'hide' ).data( 'bs.modal', null );
  $( '.modal-backdrop' ).remove();

  // update via  partial and insert it into proper place
  if ($("#locations").is("table")) {
    $("#location_<%= @location.id %>").replaceWith("<%= j render @location, formats: [:html], locals: { show: "tr" } %>");
  } else {
    $("#location_<%= @location.id %>").replaceWith("<%= j render @location, formats: [:html], locals: { show: "div" } %>");
  }

  $("#location_<%= @location.id %>").effect("highlight", {}, 3000);
<% else %>
  $( '.modal-backdrop' ).remove();
  $("#location_form").modal('hide');
  $("#location_form").replaceWith("<%= j render "form", formats: [:html] %>");
  $("#location_form").modal("show");
<% end %>
