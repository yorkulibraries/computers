<% if @location.errors.size == 0 %>
  $("#location_form").modal( 'hide' ).data( 'bs.modal', null );
  $( '.modal-backdrop' ).remove();

  // add location to a locations list, figure out if locations is a table or not
  if ($("#locations").is("table")) {
    $("#locations tbody").prepend("<%= j render @location, formats: [:html], locals: { table: true } %>");
  } else {
    $("#locations").prepend("<%= j render @location, formats: [:html], locals: { table: false } %>");
  }

  $("#location_<%= @location.id %>").effect("highlight", {}, 3000);
<% else %>
  $( '.modal-backdrop' ).remove();
  $("#add_new_location #location_form").modal('hide');
  $("#add_new_location").empty();
  $("#add_new_location").append("<%= j render "form", formats: [:html] %>");
  $("#add_new_location #location_form").modal("show");
<% end %>
