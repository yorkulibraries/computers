<% if @floor.errors.size == 0 %>
  $("#floor_form").modal( 'hide' ).data( 'bs.modal', null );
  $( '.modal-backdrop' ).remove();

  // update via  partial and insert it into proper place
  if ($("#floors").is("table")) {
    $("tr#floor_<%= @floor.id %>").replaceWith("<%= j render partial: "floors/floor", formats: [:html], locals: { floor: @floor, show: 'tr' } %>");
  } else {
    $("div#floor_<%= @floor.id %>").replaceWith("<%= j render partial: "floors/floor", formats: [:html], locals: { floor: @floor, show: 'div' } %>");
  }

  $("#floor_<%= @floor.id %>").effect("highlight", {}, 3000);
<% else %>
  $( '.modal-backdrop' ).remove();
  $("#floor_form").modal('hide');
  $("#floor_form").replaceWith("<%= j render "form", formats: [:html] %>");
  $("#floor_form").modal("show");
<% end %>
