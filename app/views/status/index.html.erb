<p id="notice"><%= notice %></p>

<h1>Summary</h1>
<p><%= @not_in_use.size %> available.</p>
<p><%= @in_use.size %> in-use.</p>

<h2>Available</h2>
<ul>
<% @not_in_use.order('ip').each do |m| %>
  <li><%= m.ip %></li>
<% end %>
</ul>
   
<h2>In-use</h2>
<ul>
<% @in_use.order('last_ping, ip').each do |m| %>
  <li><%= m.ip %>,  Last Ping: <%= time_ago_in_words(m.last_ping) %></li>
<% end %>
</ul>

<h2>Powered Off</h2>
<ul>
<% @powered_off.order('ip').each do |m| %>
  <li><%= m.ip %></li>
<% end %>
</ul>
