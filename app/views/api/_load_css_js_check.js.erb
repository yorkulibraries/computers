// attach proper css file

var pca_css_file = document.createElement('link');
pca_css_file.rel = "stylesheet";
pca_css_file.media = "all"
pca_css_file.href = "<%= asset_url('controllers/api') %>";
document.getElementsByTagName('head')[0].appendChild(pca_css_file);

// Check if jquery exists and load it if it doesn't
if (!window.jQuery) {
  var jq = document.createElement('script'); jq.type = 'text/javascript';
  var jq_ujs = document.createElement('script'); jq.type = 'text/javascript';
  // Path to jquery.js file, eg. Google hosted version
  jq.src = 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js';
  jq_ujs.src = 'https://raw.githubusercontent.com/rails/jquery-ujs/master/src/rails.js';

  document.getElementsByTagName('head')[0].appendChild(jq);
  document.getElementsByTagName('head')[0].appendChild(jq_ujs);
}
