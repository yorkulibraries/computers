<div class="modal fade" id="server_form">
  <div class="modal-dialog">
    <div class="modal-content">
    <%= simple_form_for @server, remote: true  do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"><%= @server.new_record? ? "New Image" : "Updating" %> <%= @server.hostname %></h4>
      </div>
      <div class="modal-body">

        <div class="row">
          <div class="col-sm-6">
              <%= f.input :hostname, as: :string %>
          </div>
          <div class="col-sm-6">
              <%= f.input :public_used_by, label: "Used By" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6">
              <%= f.input :public_ip %>

          </div>
          <div class="col-sm-6">
            <%= f.input :public_ip_used, label: "In Use?" %>
          </div>
        </div>


        <div class="row">
          <div class="col-sm-6">
              <%= f.input :local_hostname, as: :string %>
          </div>
          <div class="col-sm-6">
              <%= f.input :local_used_by, label: "Used By" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-6">
            <%= f.input :local_ip %>
          </div>
          <div class="col-sm-6">
            <%= f.input :local_ip_used, label: "In Use?" %>
          </div>
        </div>



      <% if @server.errors.any? %>
        <div class="error_messages">
          <hr/>
          <p class="red">
            Oops! There seems to be a small issue with this item. Please make sure you've filled out the form correctly.<br/>
            If <span title="<%=raw  @server.errors.full_messages.join("<br/>") %>">the problem</span>
            persists, please contact the administrator of this application.
          </p>
        </div>
      <% end %>
    </div>

    <div class="modal-footer">
      <% unless @server.new_record? %>
        <%= link_to @server, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "pull-left btn btn-danger" do %>
          <span class="fa fa-trash"></span><span class="sr-only">Delete?</span>
        <% end %>
      <% end %>

      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel Changes</button>
      <%= f.button :submit, class: "btn btn-success" %>
    </div>

  <% end %>
</div>
</div>
