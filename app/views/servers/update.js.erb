<% if @server.errors.size == 0 %>
  $("#server_form").modal( 'hide' ).data( 'bs.modal', null );
  $( '.modal-backdrop' ).remove();

  // update via  partial and insert it into proper place
  $("#server_<%= @server.id %>").replaceWith("<%= j render @server, formats: [:html] %>");


  $("#server_<%= @server.id %>").effect("highlight", {}, 3000);

  $(".best_in_place").best_in_place();

<% else %>
  $( '.modal-backdrop' ).remove();
  $("#server_form").modal('hide');
  $("#server_form").replaceWith("<%= j render "form", formats: [:html] %>");
  $("#server_form").modal("show");
<% end %>
