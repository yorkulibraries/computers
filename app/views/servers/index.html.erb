<% title "Server Room", false %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Server Room</h3>
  </div>
  <div class="panel-body">
    <%= link_to new_server_path, data: { remote: true }, class: "btn btn-success" do %>
      <i class="fa fa-plus"></i> New Server
    <% end %>
    <hr/>
    <p class="weak">To edit server details, click on the server field you wish update...</p>

    <table class="table" id="servers">
      <thead>
        <tr>
          <th><%= sortable :hostname, "Hostname" %></th>
          <th><%= sortable :public_ip, "Public IP (Used?)" %></th>
          <th><%= sortable :local_ip, "Local IP (Used?)" %></th>
          <th><%= sortable :administrator, "Administrator" %></th>
          <th><%= sortable :os_name, "OS Name" %></th>
          <th><%= sortable :os_version, "OS Version" %></th>
          <th class="weak soft">CNAMEs and Notes</th>
        </tr>
      </thead>

      <tbody id="server_list">
        <% @servers.each do |server| %>
          <%= render server %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
